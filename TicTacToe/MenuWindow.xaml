<Window x:Class="TicTacToe.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="Крестики-нолики :)" Height="200" Width="620"
        Icon="pikachu.ico">
    <Grid x:Name="mainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Button Name="PlayPC" Grid.Row="1" Grid.Column="0" 
                Margin="20 0 0 0" MaxWidth="200" HorizontalAlignment="Left" FontSize="20" Content="Играть против ПК"
                Click="Start_Game_With_PC"/>
        <Button Name="PlayWithPlayer" Grid.Row="1" Grid.Column="1" Margin="0 0 20 0" 
                MaxWidth="300" HorizontalAlignment="Right" FontSize="20" Content="Играть против другого игрока"
                Click="Start_Game_With_Player"/>
    </Grid>
</Window>
